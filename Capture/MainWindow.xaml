<Window x:Class="Capture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Text Encryption App" Height="240" Width="400">
    <Grid Margin="10">
        <TextBlock Text="Введите текст:" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <TextBox x:Name="txtInput" Height="30" Margin="0,20,0,0" VerticalAlignment="Top" />

        <TextBlock Text="Зашифрованный текст:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,60,0,0"/>
        <TextBox x:Name="txtEncrypted" Height="30" Margin="0,80,0,0" VerticalAlignment="Top" IsReadOnly="True"/>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,40">
            <Button x:Name="btnEncrypt" Content="Шифровать" Width="80" Click="btnEncrypt_Click" />
            <Button x:Name="btnDecrypt" Content="Дешифровать" Width="80" Click="btnDecrypt_Click" />
            <Button x:Name="btnUndo" Content="Отмена" Width="80" Click="btnUndo_Click" />
            <Button x:Name="btnCompare" Content="Сравнить" Width="80" Click="btnCompare_Click" />
        </StackPanel>
    </Grid>
</Window>
